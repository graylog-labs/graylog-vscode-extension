// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false // set this to true to hide the "out" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true // set this to false to include "out" folder in search results
    },
    "workbench.colorCustomizations": {
        "editorCodeLens.foreground":"#ff0000"
    },
    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "Comment (grule)",
                "scope": [
                    "punctuation.definition.single.comment.grule",
                    "punctuation.definition.multiline.comment.grule"
                ],
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#8E908C"
                }
            },
            {
                "name": "Comment init block (grule)",
                "scope": [
                    "punctuation.definition.comment.init.grule"
                ],
                "settings": {
                    "foreground": "#00c73c"
                }
            },
            {
                "name": "Meta scope (grule)",
                "scope": [
                    "punctuation.definition.keyword.other.scope.rule.grule",
                    "punctuation.definition.keyword.other.scope.when.grule",
                    "punctuation.definition.keyword.other.scope.then.grule",
                    "punctuation.definition.keyword.other.scope.end.grule",
                    "punctuation.definition.keyword.other.scope.let.grule"
                ],
                "settings": {
                    "foreground": "#9b69bd"
                }
            },
            {
                "name": "Function list (grule)",
                "scope": [
                    "punctuation.definition.meta.function.list.grule"
                ],
                "settings": {
                    "foreground": "#4595e4"
                }
            },
            {
                "name": "String (grule)",
                "scope": [
                    "string.quoted"
                ],
                "settings": {
                    "foreground": "#badb36"
                }
            },
            {
                "name": "Operator (grule)",
                "scope": [
                    "keyword.operator.logical.grule",
                    "keyword.operator.comparison.grule",
                    "keyword.operator.relational.grule",
                    "keyword.operator.key.grule"
                ],
                "settings": {
                    "foreground": "#FF5370"
                }
            },
            {
                "name": "Keyboard message (grule)",
                "scope": [
                    "meta.keyword.other.message.grule"
                ],
                "settings": {
                    "foreground": "#ddae02"
                }
            },
            {
                "name": "Type (grule)",
                "scope": [
                    "punctuation.definition.constant.language.boolean.grule",
                    "punctuation.definition.constant.numeric.grule"
                ],
                "settings": {
                    "foreground": "#F5871F"
                }
            }
        ]
    }
}